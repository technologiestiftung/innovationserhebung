{
    "scripts": {
        "get-fonts": "source .env && curl --fail $FONTS_URL --output fonts.zip && unzip -j -o fonts.zip -d app/static/fonts && rm fonts.zip",
        "dev:tailwind": "tailwindcss -i app/styles/main.css -o app/static/css/main.css --watch",
        "build": "tailwindcss -i app/styles/main.css -o app/static/css/main.css --minify"
    },
    "devDependencies": {
        "prettier": "^3.0.3",
        "prettier-plugin-jinja-template": "^1.1.0",
        "tailwindcss": "^3.3.3"
    }
}
